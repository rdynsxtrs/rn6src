 configure.ac | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/configure.ac b/configure.ac
index c240a2d..3b96345 100644
--- a/configure.ac
+++ b/configure.ac
@@ -1332,7 +1332,7 @@ PHP_BUILD_DATE=`date -u +%Y-%m-%d`
 fi
