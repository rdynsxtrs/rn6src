diff --git a/ext/gmp/config.m4 b/ext/gmp/config.m4
index fa55751..1efacd8 100644
--- a/ext/gmp/config.m4
+++ b/ext/gmp/config.m4
@@ -12,7 +12,7 @@ if test "$PHP_GMP" != "no"; then
 
     PHP_ADD_LIBRARY(gmp,,GMP_SHARED_LIBADD)
   else
